# default configuration options for all environments
default:
  # Outgoing emails configuration
  email_delivery:
{% if redmine_enable_smtp_email %}
    delivery_method: :smtp
    smtp_settings:
      address: "{{ redmine_smtp_settings_address }}"
      port: {{ redmine_smtp_settings_port }}
      domain: "{{ redmine_smtp_settings_domain }}"
{% if redmine_smtp_settings_authentication %}
      authentication: :{{ redmine_smtp_settings_authentication }}
      user_name: "{{ redmine_smtp_settings_user_name }}"
      password: "{{ redmine_smtp_settings_password }}"
{% endif %}
      enable_starttls_auto: {{ redmine_smtp_settings_enable_starttls_auto }}
{% endif %}

  attachments_storage_path:

  autologin_cookie_name:
  autologin_cookie_path:
  autologin_cookie_secure:

  scm_subversion_command:
  scm_mercurial_command:
  scm_git_command:
  scm_cvs_command:
  scm_bazaar_command:
  scm_darcs_command:

  scm_subversion_path_regexp:
  scm_mercurial_path_regexp:
  scm_git_path_regexp:
  scm_cvs_path_regexp:
  scm_bazaar_path_regexp:
  scm_darcs_path_regexp:
  scm_filesystem_path_regexp:

  scm_stderr_log_file:

  database_cipher_key:

  rmagick_font_path:

